<div class="container">
  <h2 class="well text-center">Sign Up</h2>
  <div class="panel panel-default col-md-4 col-md-offset-4 text-center custom-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="custom-form">
        <div class="field">
          <%= f.label :first_name, class:"col-md-6" %>
          <%= f.text_field :first_name, autofocus: true, class:"col-md-6" %>
        </div><br>

        <div class="field">
          <%= f.label :last_name, class:"col-md-6" %>
          <%= f.text_field :last_name, class:"col-md-6" %>
        </div><br>

        <div class="field">
          <%= f.label :email, class:"col-md-6" %>
          <%= f.email_field :email, class:"col-md-6"%>
        </div><br>

        <div class="field">
          <%= f.label :password, class:"col-md-6" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class:"col-md-6" %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, class:"col-md-6" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"col-md-6"%>
        </div><br>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
