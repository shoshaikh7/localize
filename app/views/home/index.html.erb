<div class="jumbotron main-header text-center">
  <h1>Welcome to Localized<% if user_signed_in? %>
                            <%= current_user.first_name.capitalize %>
                          <% end %>!
  </h1>
  <h3>Create a beautiful single page website for your small business with only a few clicks!</h3><br>
  <% if user_signed_in? %>
    <%= button_tag "Check Out Other Business Pages", :type => 'button', :class => "btn btn-lg btn-info", :onclick => "location.href = '#{companies_path}'" %>
    <% if current_user.company == nil %>
      <%= button_tag "Create Your Business Page", :type => 'button', :class => "btn btn-lg btn-success", :onclick => "location.href = '#{new_company_path}'" %>
    <% end %>
  <% else %>
    <%= button_tag "Check Out Localized", :type => 'button', :class => "btn btn-lg btn-info", :onclick => "location.href = '#{companies_path}'" %>
  <% end %>!
</div>
<div class="container">
</div>
