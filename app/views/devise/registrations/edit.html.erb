<div class="container">
  <h2 class="well text-center">Edit <%= resource_name.to_s.humanize %></h2>
  <div class="col-md-4 col-md-offset-4 custom-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-user"></i></span>
        <%= f.text_field :first_name, autofocus: true, class:"col-md-6 form-control", placeholder:"First Name" %>
      </div>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-user"></i></span>
        <%= f.text_field :last_name, class:"col-md-6 form-control", placeholder:"Last Name" %>
      </div>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-at"></i></span>
        <%= f.email_field :email, class:"col-md-6 form-control", placeholder:"Email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <i>(Leave blank if you dont want to change it)</i>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-asterisk"></i></span>
        <%= f.password_field :password, autocomplete: "off", class:"col-md-6 form-control", placeholder:"Password" %>
      </div>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-asterisk"></i></span>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"col-md-6 form-control", placeholder:"Password Confirmation" %>
      </div>
      <i>(We need your current password to confirm your changes)</i>
      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-asterisk"></i></span>
        <%= f.password_field :current_password, autocomplete: "off", class:"col-md-6 form-control", placeholder:"Current Password" %>
      </div>
      <div class="actions">
        <%= f.submit "Update Account", class:"btn btn-lg btn-default btn-block" %>
      </div>
    <% end %><br>
    <div class="text-center">
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-lg btn-block" %></p>

      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
