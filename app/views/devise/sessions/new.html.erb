<div class="container">
  <h2 class="well text-center">Log In</h2>
  <div class="panel panel-default col-md-4 col-md-offset-4 text-center custom-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class:"col-md-6" %>
        <%= f.email_field :email, autofocus: true, class:"col-md-6" %>
      </div><br><br>

      <div class="field">
        <%= f.label :password, class:"col-md-6" %>
        <%= f.password_field :password, autocomplete: "off", class:"col-md-6" %>
      </div><br><br>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
