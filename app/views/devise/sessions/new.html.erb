<div class="container">
  <h2 class="well text-center">Log In</h2>
  <div class="col-md-4 col-md-offset-4 custom-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-at"></i></span>
        <%= f.email_field :email, autofocus: true, class:"col-md-6 form-control", placeholder:"Email" %>
      </div>

      <div class="field input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-asterisk"></i></span>
        <%= f.password_field :password, autocomplete: "off", class:"col-md-6 form-control", placeholder:"Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-lg btn-default btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
