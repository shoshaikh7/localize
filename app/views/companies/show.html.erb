<div class="container show-container">
  <% if current_user.id == @company.user.id %>
    <h3 class="well text-center">This is your business page! <%= link_to "You can edit it here.", edit_company_path(@company) %></h3>
  <% end %>
  <div class="row page-header show-header">
    <div class="company-image col-md-3"><%= image_tag @company.image.url(:large) %></div>
    <div class="company-name col-md-8"><h1><%= @company.company_name %></h1></div>
    <div class="company-tagline col-md-6"><%= @company.tagline %></div>
    <% if @company.tags.any? %>
      <% @company.tags do |tag| %>
        <div><%= link_to tag.name, tag_path(:tag => tag.name) %></div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default company-address">
        <div class="panel-heading"><p class="panel-title">Address</p></div>
        <div class="panel-body">
          <div class="row">
            <h5 class="col-md-3">Address:</h5><h5 class="col-md-8"><%= @company.street_address %></h5>
          </div>
          <div class="row">
            <h5 class="col-md-3"></h5><h5 class="col-md-8"><%= @company.street_address_2 %></h5>
          </div>
          <div class="row">
            <h5 class="col-md-3">City:</h5><h5 class="col-md-8"><%= @company.city %></h5>
          </div>
          <div class="row">
            <h5 class="col-md-3">State:</h5><h5 class="col-md-8"><%= @company.state %></h5>
          </div>
          <div class="row">
            <h5 class="col-md-3">Zipcode:</h5><h5 class="col-md-8"><%= @company.zipcode %></h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading"><p class="panel-title">Hours</p></div>
        <div class="panel-body">
          <table class="table table-hover table-condensed table-responsive">
            <th>
              <h6><strong>Day</strong></h6>
            </th>
            <th>
              <h6><strong>Opening</strong></h6>
            </th>
            <th>
              <h6><strong>Closing</strong></h6>
            </th>
            <tr>
              <td><h6>Monday</h6></td>
              <td><h6><%= @company.mon_open %></h6></td>
              <td><h6><%= @company.mon_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Tuesday</h6></td>
              <td><h6><%= @company.tues_open %></h6></td>
              <td><h6><%= @company.tues_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Wednesday</h6></td>
              <td><h6><%= @company.wed_open %></h6></td>
              <td><h6><%= @company.wed_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Thursday</h6></td>
              <td><h6><%= @company.thurs_open %></h6></td>
              <td><h6><%= @company.thurs_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Friday</h6></td>
              <td><h6><%= @company.fri_open %></h6></td>
              <td><h6><%= @company.fri_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Saturday</h6></td>
               <td><h6><%= @company.sat_open %></h6></td>
               <td><h6><%= @company.sat_close %></h6></td>
            </tr>
            <tr>
              <td><h6>Sunday</h6></td>
              <td><h6><%= @company.sun_open %></h6></td>
              <td><h6><%= @company.sun_close %></h6></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading"><p class="panel-title">Contact</p></div>
        <div class="panel-body">
          <div class="row">
            <h5 class="col-md-4">Email:</h5><h5 class="col-md-4"><%= @company.email %></h5>
          </div>
          <div class="row">
            <h5 class="col-md-4">Phone:</h5><h5 class="col-md-4"><%= @company.phone %></h5>
          </div>
          <hr>
          <br>
          <a href="<%= @company.facebook %>" id="facebook" class="col-md-3 col-md-offset-2"><i class="fa fa-3x fa-facebook-square"></i></a>
          <a href="<%= @company.twitter %>" id="twitter" class="col-md-3"><i class="fa fa-3x fa-twitter-square"></i></a>
          <a href="<%= @company.google %>" id="google" class="col-md-3"><i class="fa fa-3x fa-google-plus-square"></i></a>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"><p>About Us</p></div>
    <div class="panel-body company-about"><p><%= @company.about %></p></div>
  </div>
</div>
